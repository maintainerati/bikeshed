{% use '@Bikeshed/_form/_edit_form.html.twig' %}

{% block form %}
    {{ form_errors(form) }}
    {{ form_start(form, { attr: { id: form.vars.id }}) }}
    {{ block('form_fields') }}
    {%- with { field: form.save, show_branding: false } %}{{ block('submit') }}{%- endwith %}
    {{ form_end(form) }}
{% endblock %}

{% block form_fields %}
    {{ form_row(form.id) }}
    {{ form_row(form.event) }}
    {{ form_row(form.session) }}
    {% with { field: form.name } %}{{ block('form_field') }}{% endwith %}
    {% with { field: form.topic } %}{{ block('form_field') }}{% endwith %}
{% endblock %}

{% use '@Bikeshed/_form/_edit_form.html.twig' %}

{% block form %}
    {{ form_errors(form) }}
    {{ form_start(form, { attr: { id: form.vars.id }}) }}
    {{ block('form_fields') }}
    {{ form_end(form) }}
    <style>.control textarea { height: 415px; }</style>
{% endblock %}

{% block form_fields %}
    {{ form_row(form.id) }}
    {{ form_row(form.date) }}
    {{ form_row(form.space) }}
    {% with { field: form.date } %}{{ block('form_field') }}{% endwith %}
    {% with { field: form.note, field_class: 'textarea' } %}{{ block('form_field') }}{% endwith %}
    {% with { field: form.save, show_branding: true } %}{{ block('submit') }}{% endwith %}
{% endblock %}
